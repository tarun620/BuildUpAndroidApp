<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_bg_orrder_screen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="15dp">

        <RadioButton
            android:id="@+id/btn_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/orange_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_home_type"
            app:layout_constraintStart_toEndOf="@+id/btn_radio"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_group236"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/home_icon"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_delete_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_frame68"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:background="@null"
            app:layout_constraintEnd_toStartOf="@id/btn_delete_address"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="27dp"/>

        <TextView
            android:id="@+id/tv_client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shashank Jain"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/overpass_semibold"
            app:layout_constraintStart_toStartOf="@id/home_icon"
            app:layout_constraintTop_toBottomOf="@id/home_icon"
            android:layout_marginTop="12dp"/>


        <TextView
            android:id="@+id/tv_shipping_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 C ED Block, Madhuban Chowk, PitamPura, Delhi - 110034"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:fontFamily="@font/overpass"
            app:layout_constraintStart_toStartOf="@id/tv_client_name"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_client_name"
            android:layout_marginTop="11dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/phone_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call"
            app:layout_constraintStart_toStartOf="@id/tv_shipping_address"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_shipping_address"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="27dp"/>

        <TextView
            android:id="@+id/tv_client_mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 8178600312"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/overpass_semibold"
            android:textFontWeight="600"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/phone_icon"
            app:layout_constraintTop_toTopOf="@id/phone_icon"
            app:layout_constraintBottom_toBottomOf="@id/phone_icon"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>