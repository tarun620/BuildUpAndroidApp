                        android:layout_marginTop="24dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_product_name">

                        <com.shuhart.stepview.StepView
                            android:id="@+id/step_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:layout_marginTop="24dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:sv_textSize="11sp"
                            app:sv_selectedCircleColor="#0CB683"
                            app:sv_selectedTextColor="#0CB683"
                            app:sv_stepLineWidth="1dp"
                            app:sv_stepPadding="0dp"
                            app:sv_nextTextColor="#929292"
                            app:sv_nextStepLineColor="#929292"
                            app:sv_doneCircleColor="#0CB683"
                            app:sv_doneStepLineColor="#0CB683"
                            app:sv_doneTextColor="#0CB683"
                            app:sv_doneStepMarkColor="#0CB683"
                            app:sv_doneCircleRadius="7dp"
                            app:sv_selectedCircleRadius="7dp"
                            app:sv_selectedStepNumberColor="#0CB683"
                            app:sv_stepViewStyle="@style/StepView"
                            app:sv_nextStepCircleEnabled="true"
                            app:sv_animationType="All"
                            app:sv_nextStepCircleColor="#929292"/>

