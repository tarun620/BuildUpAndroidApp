    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/confirmPasswordTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:animateLayoutChanges="false"
        android:gravity="start"
        android:hint="Confirm Password"
        android:textColor="@color/textGrey"
        android:textColorHint="@color/textGrey"
        android:textSize="18sp"
        android:visibility="gone"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/orange_main"
        app:hintTextColor="@color/textGrey"
        app:layout_constraintBottom_toTopOf="@+id/forgetPasswordTextview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextInputLayout"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordConfirmEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/overpass"
            android:gravity="start"
            android:inputType="textPassword"
            android:textColor="@color/textGrey"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/forgetPasswordTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/rancho"
        android:text="Forget Password"
        android:textColor="@color/textGrey"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/SignUpButton"
        app:layout_constraintEnd_toEndOf="@+id/passwordTextInputLayout"
        app:layout_constraintTop_toBottomOf="@id/confirmPasswordTextInputLayout" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/SignUpButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:backgroundTint="#F78E4D"
        android:fontFamily="@font/rancho"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:cornerRadius="18dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgetPasswordTextview" />


    <ImageView
        android:id="@+id/imageView4"
