<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="7dp">

    <ImageView
        android:id="@+id/updatesImage"
        android:layout_width="42dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/item_image"
        android:background="@drawable/circular_imageview"
        app:layout_constraintBottom_toBottomOf="@+id/updatesDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/updatesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/overpass"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/updatesDate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/updatesImage"
        app:layout_constraintTop_toTopOf="@+id/updatesImage"
        tools:text="Carpenter " />

    <TextView
        android:id="@+id/updatesDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/overpass"
        android:textColor="@color/textGrey"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/updatesImage"
        app:layout_constraintTop_toBottomOf="@+id/updatesTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:text="Some update about work" />

    <TextView
        android:id="@+id/updatesDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/overpass"
        android:textColor="@color/textGrey"
        android:textSize="15sp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/updatesImage"
        tools:text="Apr 23" />




</androidx.constraintlayout.widget.ConstraintLayout>