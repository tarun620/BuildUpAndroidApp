<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F3F3"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_productCategoryImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_27"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_productCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sanitory"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_productCategoryImage"
        app:layout_constraintStart_toStartOf="@+id/iv_productCategoryImage"
        app:layout_constraintTop_toBottomOf="@+id/iv_productCategoryImage" />


</androidx.constraintlayout.widget.ConstraintLayout>