    <com.shuhart.stepview.StepView
        android:id="@+id/stepsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:sv_selectedStepNumberColor="@color/white"
        app:sv_nextStepCircleColor="@color/stepView_grey"
        app:sv_doneStepMarkColor="@color/black"
        app:sv_selectedCircleColor="@color/white"
        app:sv_selectedTextColor="@color/white"
        app:sv_stepLineWidth="1dp"
        app:sv_stepPadding="4dp"
        app:sv_nextTextColor="@color/stepView_grey"
        app:sv_nextStepLineColor="@color/stepView_grey"
        app:sv_nextStepCircleEnabled="true"
        app:sv_doneTextColor="@color/stepView_green"
        app:sv_doneCircleColor="@color/stepView_green"
        app:sv_doneStepLineColor="@color/stepView_green"
        app:sv_doneCircleRadius="12dp"
        app:sv_selectedCircleRadius="12dp"
        app:sv_stepNumberTextSize="12sp"
        app:sv_animationType="Line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/propertyName"/>

